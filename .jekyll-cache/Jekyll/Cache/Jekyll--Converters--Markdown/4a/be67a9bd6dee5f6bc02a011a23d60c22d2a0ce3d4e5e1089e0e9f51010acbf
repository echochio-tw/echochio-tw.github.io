        case "zh":
            $_SESSION['language'] = "Simp";
            if (substr($_SERVER['HTTP_ACCEPT_LANGUAGE'], 0, 5) == "zh-tw")
                {$_SESSION['language'] = "Chinese"; }
            if (substr($_SERVER['HTTP_ACCEPT_LANGUAGE'], 0, 5) == "zh-TW")
                {$_SESSION['language'] = "Chinese"; }
            break;
        case "ja":
            $_SESSION['language'] = "Japanese";
            break;
        default :
            $_SESSION['language'] = "English";
    }
}
